<li role="presentation" class="clearfix">
  <%= lesson_link(lesson) do %>
    <div class="user-img float-left">
      <%= user_img(lesson.host) %>
    </div>
    <div class="invite-content float-left">
      <p><strong><%= lesson.shortened_description %></strong></br>
      <%= lesson.schedule.in_time_zone('Eastern Time (US & Canada)').strftime('%F %R') %> | <%= language_symbol(lesson.language) %> <%= lesson.language.name %> | <%= problem_number(lesson.problem) %></p>
    </div>
  <%- end -%>
</li>
