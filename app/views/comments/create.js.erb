var newDiv = '<%= j(render "comments/comment", :comment => @comment) %>'
var $container = $("div#comment-list")
$("textarea").val("");
$(".md-preview").children().remove();
$("textarea").focus();
$container.append(newDiv);

$("body").animate({
    scrollTop: $("div[data-id=" + "<%= @comment.id %>" + "] > div").offset().top - 85
});