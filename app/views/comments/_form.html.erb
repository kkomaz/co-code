<%= form_for [@post, Comment.new], :url => new_post_comment_path(@post), :remote => true do |f| %>
  <%= f.text_area :content, :rows => 15, :placeholder => "Add comment here...", :class => "full-width", data: { :"hidden-buttons" => ["cmdBold", "cmdItalic", "cmdHeading", "cmdUrl", "cmdImage", "cmdList", "cmdList0", "cmdCode", "cmdQuote"], provide: "markdown", :fullscreen => "" } %> <br>
  <%= f.submit "Add Comment", :class => "btn btn-primary full-width" %>
<%- end -%>