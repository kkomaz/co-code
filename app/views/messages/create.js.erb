<%- publish_to @path do -%>
  var $newEl = $("<%= j(render 'messages/message', :message => @message) %>");
  var receiver_id = $("#meta").data("user-id"), $newEl;

  if(receiver_id !== <%= current_user.id %>){
    $("div.send", $newEl).removeClass("send").addClass("receive");
    $("div.right", $newEl).removeClass("right").addClass("left");
  }

  $('#textfield-<%= @message.user.id %>').val("")
  $('#chatbox').append($newEl);

  newMessageScroll();

<%- end -%>