<div class="container">
  <div class="row top-pad">
    <div class="col-md-12">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel">
          <h3 id="login-page-head">Oops! Please try again!</h3>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="actions">
                <%= render "devise/shared/fb" %>
              </div>

              <strong class="line-thru">- or -</strong>

              <div class="field col-md-6 col-md-offset-3">
                <%= f.email_field :email, autofocus: true, class: "col-md-12", :placeholder => "email" %>
              </div>

              <div class="field col-md-6 col-md-offset-3" id="modal-field-email">
                <%= f.password_field :password, autocomplete: "off", class: "col-md-12", :placeholder => "password" %>
              </div>

              <div class="field col-md-12 col-md-offset-3">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>

              <div class="actions">
                <%= f.submit "LOG IN", class: "btn btn-block btn-md btn-inverse", id: "login-btn-modal" %>
              </div>

          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
