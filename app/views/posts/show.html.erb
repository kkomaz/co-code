<div class="container">
  <div class="row top-pad">
    <div class="col-md-6 col-sm-12">
      <div class="panel bread-crumb">
        <h6>
          <%= link_to progress_path(@language.slug) do %>
            <i class="icon-<%= language_icon(@language) %>"></i> <%= @language.name %>
          <%- end -%> /
          <%= link_to language_problem_path(@language.slug, @problem.slug) do %>
            <%= problem_number(@problem) %>
          <%- end -%> / New Question
        </h6>
      </div>
    </div>
  </div>



  <h2><%= @post.title %></h2>
  <p><%= @post.content %></p>



  <h3>Comments</h3>

  <div id="comment-container">
    <ul id="comment-list">
      <%= render :partial => 'comments/comment', :collection => @post.comments, :as => 'comment'  %>
    </ul>
  </div>


  <%= render 'comments/form' %>

</div>
