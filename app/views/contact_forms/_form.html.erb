<%= form_for @contact_form, :class => "form-box" do |f| %>
<center><h3>We love feedback! Send us a message!</h3></center>
  <%= f.label :name, "Your Name" %> <br>
  <%= f.text_field :name, :class => "form-control", :value => current_user.full_name %>

<div class="form-group">
  <%= f.label :email, "Your Email" %> <br>
  <%= f.text_field :email, :class => "form-control", :value => current_user.email%>
</div>

<div class="form-group">
<%= f.label :message, "Ask your question here!" %> <br>
<%= f.text_area :message, :class => "form-control", rows: 10 %>
</div>

<div class= "hidden">
      <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
</div>
<div class="form-group">
<%= f.submit "Send", :class => "btn btn-primary" %>
</div>
<% end %>

