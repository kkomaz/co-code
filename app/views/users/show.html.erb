<div class="container">
    <%= render :partial => 'list', :collection => @current_languages, :as => :language %>

  <% if current_user.available_user_languages.count > 0 %>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Add a Language
  </button>
  <% else %>
  <button type="button" disabled class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">
    Add a Language
  </button>
  <% end %>

  <!-- Modal -->
  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Available Tracks</h4>
        </div>
        <div class="modal-body">
          <%= render 'languages/form' %>
        </div>
      </div>
    </div>
  </div>
</div>
